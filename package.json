{
	"name": "angularjs-go-to-definition",
	"description": "Enable 'Go to definition' on AngularJS 1.x components",
	"author": "camjocotem",
	"license": "MIT",
	"version": "1.0.3",
	"repository": {
		"type": "git"
	},
	"publisher": "camjocotem",
	"categories": [],
	"keywords": [
		"multi-root ready"
	],
	"engines": {
		"vscode": "^1.75.0"
	},
	"activationEvents": [
		"onLanguage:plaintext"
	],
	"main": "./client/out/extension",
	"contributes": {
		"configuration": {
			"type": "object",
			"title": "AngularJS Go To Definition Extension",
			"properties": {
				"pathsToExclude": {
					"type": "array",
					"items": {
						"type": "string"
					},
					"description": "Exclude from the search for AngularJS components.",					
					"default":[
							"/node_modules/",
							"/dist/",
							"/build/",
							"/coverage/",
							"/test/",
							"/tests/",
							"/spec/",
							"/specs/",
							"/e2e/",
							"/mock/",
							"/mocks/",
							"/lib/"
					]
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
		"test": "sh ./scripts/e2e.sh"
	},
	"devDependencies": {
		"@types/mocha": "^9.1.0",
		"@types/node": "^16.11.7",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"mocha": "^9.2.1",
		"typescript": "^5.0.2"
	},
	"dependencies": {
		"@babel/parser": "^7.21.4",
		"@babel/traverse": "^7.21.4",
		"@babel/types": "^7.21.4"
	}
}
